<script language = "javascript">
function confirmEdit(form)
{
		if(form.Address1.value != "") {
				if (confirm("Edit Venue?")) {
					form.action = "EditVenue.jsp?edit=1";
					form.method = "post";
					form.submit();
					return true;
			} else
				return false;
		} else {
			if(form.Address1.value == "") {
				alert("Please enter address line 1");
				form.Address1.focus();
			}
			return false;
		}
		return true;
	}

	function cancelEdit() {
		window.close();
	}
</script>

